# Neo4j Database Configuration
NEO4J_URI=bolt://localhost:7687
NEO4J_USER=neo4j
NEO4J_PASSWORD=your_password_here

# Application Configuration
APP_NAME=Mini Foundry Supply Chain Control Tower
APP_VERSION=1.0.0
DEBUG=True

# Streamlit Configuration
STREAMLIT_PORT=8501
