# ==========================================
# SAP S/4HANA Configuration
# ==========================================
SAP_HOST=your-sap-host.com
SAP_PORT=443
SAP_USER=your-sap-username
SAP_PASSWORD=your-sap-password
SAP_CLIENT=100
SAP_SYSTEM_ID=S4H

# SAP OData API Settings
SAP_USE_ODATA=true
SAP_USE_RFC=false

# ==========================================
# Oracle Database Configuration
# ==========================================
ORACLE_HOST=your-oracle-host.com
ORACLE_PORT=1521
ORACLE_USER=your-oracle-username
ORACLE_PASSWORD=your-oracle-password

# Use either SERVICE_NAME or SID (not both)
ORACLE_SERVICE_NAME=ORCL
# ORACLE_SID=ORCL

ORACLE_SCHEMA=SUPPLY_CHAIN

# ==========================================
# Data Source Configuration
# ==========================================
# Comma-separated list of enabled data sources
ENABLED_DATA_SOURCES=CSV,NEO4J
# For enterprise: ENABLED_DATA_SOURCES=SAP_S4HANA,ORACLE,NEO4J

# Primary data source for each entity type
PRIMARY_SUPPLIER_SOURCE=CSV
PRIMARY_PRODUCT_SOURCE=CSV
PRIMARY_WAREHOUSE_SOURCE=CSV
PRIMARY_SHIPMENT_SOURCE=CSV

# ==========================================
# Application Configuration
# ==========================================
DATA_PATH=./data
APP_NAME=Mini Foundry Supply Chain Control Tower
APP_VERSION=0.2.0
DEBUG=True

# ==========================================
# Sync & ETL Configuration
# ==========================================
# Sync interval in minutes
SYNC_INTERVAL_MINUTES=30

# Enable auto-sync on startup
AUTO_SYNC_ON_STARTUP=false

# Batch size for bulk operations
ETL_BATCH_SIZE=1000

# ==========================================
# Performance & Caching
# ==========================================
ENABLE_CACHING=True
CACHE_TTL_SECONDS=300

# Redis Configuration (optional)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0

# ==========================================
# Monitoring & Logging
# ==========================================
LOG_LEVEL=INFO
LOG_FILE=logs/supply_chain.log

# Enable health checks
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL_SECONDS=60
